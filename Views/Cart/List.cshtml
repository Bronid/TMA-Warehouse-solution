@model List<TMA_Warehouse_solution.Controllers.CartController.CartItem>

<h1>Cart Items</h1>

@if (Model.Count > 0)
{
        <table class="table">
            <thead>
                <tr>
                    <th>Item Id</th>
                    <th>Quantity</th>
                    <th>Comment</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Quantity</td>
                            <td>@item.Comment</td>
                        </tr>
            }
            </tbody>
        </table>
}
else
{
        <p>Cart is empty.</p>
}
